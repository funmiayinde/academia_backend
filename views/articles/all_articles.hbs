<div class="panel panel-default">
    <div class="panel-heading">
        <h2>{{activePage}} </h2>
        <div class="panel-ctrls"></div>
    </div>
    <div class="panel-body no-padding">
        <table id="example" class="table table-striped table-bordered" cellspacing="0" width="100%">
            <thead>
            <tr>
                <th>#</th>
                <th>Title</th>
                <th>Article</th>
                <th>Action</th>
            </tr>
            </thead>
            <tbody>
            {{#each all_article}}
                <tr class="odd gradeX">
                    <td>
                        {{#if images}}
                            <a href="#{{this._id}}" style="margin: 0; padding: 0">
                                <img src="/{{images}}" class="img.avatar img-circle"
                                     style="height: 30px; width: 30px; margin: -15px 0">
                            </a>
                        {{/if}}
                    </td>
                    <td>{{title}}</td>
                    <td class="dot-ellipsis dot-height-20">{{article}}</td>
                    <td><a href="/articles/edit_article/{{this._id}}"><i class="ti ti-pencil"></i></a></td>
                </tr>
            {{/each}}
            </tbody>
        </table>
    </div>


    <div class="panel-footer">
        {{#if error}}
            <div class="center-block text-center">
                <br>
                <div class=" col-xs-offset-3 col-xs-9 alert alert-danger"
                     style="margin-bottom: -10px; padding: 10px;">{{error}}</div>
            </div>
        {{/if}}



        <!--<img src="./public/images/16_20_47_AmeriKKKa's Most Wanted Cover.jpg">-->

    </div>
</div>