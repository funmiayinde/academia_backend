<div id="wrapper">
    <div id="layout-static">
        <div class="static-content-wrapper">
            <div class="static-content">
                <div class="page-content">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-md-13">
                                <div class="panel panel-inbox">
                                    <div class="panel-body">
                                        {{#if success}}
                                            <div class="text-center center-block">
                                                <br>
                                                <div class="alert alert-success col-xs-offset-3 col-xs-9"
                                                     style="padding: 10px; margin-left: 142px">{{success}}</div>
                                            </div>
                                        {{/if}}
                                        {{#if error}}
                                            <div class="center-block text-center">
                                                <br>
                                                <div class=" col-xs-offset-3 col-xs-9 alert alert-danger"
                                                     style="margin-bottom: -10px; padding: 10px;">{{error}}</div>
                                            </div>
                                        {{/if}}
                                        <form action="/articles/edit_article" method="post" class="form-horizontal p-md">
                                            <input type="hidden" class="form-control input-lg" value="{{article_id}}"
                                                   name="id" id="id" >
                                            <div class="form-group mb-sm">
                                                <div class="col-md-12">
                                                    <div class="input-group input-group-lg">
                                                        <span class="input-group-addon">Title:</span>
                                                        <input type="text" class="form-control input-lg" value="{{article_title}}"
                                                               name="title" id="title" >
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="form-group mb-n">
                                                <div class="col-xs-12">
                                                    <textarea name="article" class="composer" id="article">{{article}}</textarea>
                                                </div>
                                            </div>
                                            <div class="inbox-mail-footer">
                                                <div class="clearfix">
                                                    <div class="pull-right">
                                                        <input type="submit" class="btn btn-lg btn-success"
                                                               value="Update">
                                                    </div>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div> <!-- .container-fluid -->
                </div> <!-- #page-content -->
            </div>
        </div>
    </div>
</div>
